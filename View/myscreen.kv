    #            size_y: 50
                height:50
#                width:50

#                pos_hint: {"center_x": .5}
                #adaptive_size: True
                background_color: (1,0,0, 1)
#            canvas.before:
#                Color:
#                    rgba: self.background_color
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
            Image:
                source:'ilopet.jpg'
#                center_x:self.parent.center_x
#                center_y:self.parent.center_y
#                size:"5sp","5sp"
                size: (5,5)

        # имя пациента
        MyField
            id: pet_name_input
            hint_text: 'Имя пациента'
            on_text: root.set_pet_name(self.text)
            pos_hint: {"center_x": .46}
        GridLayout:
            cols:2
            padding:75,0,0,0
#            ToolTipSpinner:
#                id: sp1
#                tooltip_txt: 'tool'
#                text: 'value'
#                on_text: self.on_spinner_select(self.text)

        # дата рождения
            MyField:
                id: birth_date_input
                hint_text: 'Дата рождения'
                helper_text: 'YYYY-MM-DD'
                helper_text_mode: 'on_focus'
                max_text_length: 10
                on_text: root.set_birth_date(self.text)

            #Button:
            TooltipButton:
                tooltip_text: 'календарь'
                size_hint:None,None
#            text:'Дата рождения'
#            front_size:32
                size: "40sp", "40sp"
                on_press: root.choose_birth_date()
                background_color:0,0,0,0

                Image:
                    source:'i.jpg'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y
                    size:"40sp","40sp"

            # дата последнего приёма
            MyField:
                id: last_appointment_date_input
                hint_text: 'Дата последнего посещ-ия'
                helper_text: 'YYYY-MM-DD'
                helper_text_mode: 'on_focus'
                max_text_length: 10
                on_text: root.set_last_appointment_date(self.text)
#                pos_hint: {"center_x": .5,"center_y":.5}

