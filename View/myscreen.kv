        adaptive_size: True

        #spacing: "12dp"
        #padding: "12dp"
        #radius: [10, ]
        #pos_hint: {"center_x": .5, "center_y": .5}
        GridLayout:
            cols:2
            Label:
                text: "[color=c06ef0]                       Sign Up[/color]"
                markup: True
                font_size: 20
                size_hint: None, None
