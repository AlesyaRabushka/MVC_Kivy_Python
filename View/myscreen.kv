#:import Factory kivy.factory.Factory
#:import Window kivy.core.window

<MyField@MDTextField>
    size_hint_x: None
    width: '200'
    text_color: "000000"
    required: True
    helper_text: "This field is required"
    helper_text_mode: "on_error"
    multiline: False
    background_color: (1, 1, 1)
    background_normal:''
    #input_filter: "int"


<AddPopup@Popup>
    auto_dismiss:False
    title: 'Регистрация'
    separator_color: (192/256,110/256,240/256,1)
    size_hint:None,None
    size:(400,500)


    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            cols:2
            Label:
                text: "[color=c06ef0]                       Sign Up[/color]"
                markup: True
                font_size: 20
                size_hint: None, None
                height:50
                background_color: (1,0,0, 1)

            Image:
                source:'ilopet.jpg'
                size: (5,5)

        # имя пациента
        MyField
            id: pet_name_input
            hint_text: 'Имя пациента'
            on_text: root.set_pet_name(self.text)
            pos_hint: {"center_x": .46}
        GridLayout:
            cols:2
            padding:75,0,0,0

        # дата рождения
            MyField:
                id: birth_date_input
                hint_text: 'YYYY-MM-DD'
                max_text_length: 10
                on_text: root.set_birth_date(self.text)

            Button:
                size_hint:None,None
                size: "40sp", "40sp"
                on_press: root.choose_birth_date()
                background_color:0,0,0,0

                Image:
                    source:'i.jpg'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y
                    size:"40sp","40sp"

            # дата последнего приёма
            MyField:
                id: last_appointment_date_input
                hint_text: 'YYYY-MM-DD'
                max_text_length: 10
                on_text: root.set_last_appointment_date(self.text)

            Button:
#                text:'Дата последнего приёма'
                size_hint: None, None
                size: "40sp", "40sp"
                on_press: root.choose_last_appointment_date()
                background_color:0,0,0,0

                Image:
                    source:'i.jpg'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y
                    size:"40sp","40sp"
        GridLayout:
            cols: 1
            padding: 75,0,0,0
            # имя врача
            MyField:
                hint_text: 'Имя врача'
                id: vet_name_input
                on_text: root.set_vet_name(self.text)
                multiline: False
                pos_hint: {"center_x": .5,"center_y":.5}

            # название болезни
            MyField:
                hint_text: 'Диагноз'
                id: disease_input
                on_text: root.set_disease(self.text)
                multiline: False
                pos_hint: {"center_x": .5,"center_y":.5}

        GridLayout:
            cols: 1
            rows: 2
            padding: 95, 0, 0, 0
            spacing: 10
            MDFillRoundFlatButton:
                text: '   Добавить информацию  '
                on_press: root.record_patient_info()
                text_color: 0, 0, 0, 1
                line_color: 0, 0, 0, 1



            MDFillRoundFlatButton:
                text: 'Вернуться в главное меню'
                on_press: root.dismiss()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1



