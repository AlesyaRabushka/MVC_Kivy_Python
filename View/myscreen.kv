                    source:'i.jpg'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y
                    size:"40sp","40sp"
        GridLayout:
            cols: 1
            padding: 75,0,0,0
            # имя врача
            MyField:
                hint_text: 'ФИО врача'
                id: vet_name_input
                on_text: root.set_vet_name(self.text)
                multiline: False
                pos_hint: {"center_x": .5,"center_y":.5}

