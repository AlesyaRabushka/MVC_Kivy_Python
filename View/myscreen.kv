<WarningPopup@Popup>
    title: 'XML Parsing Error'
    auto_dismiss:False
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size_hint:None,None
    size:(350,450)
    pos_hint: {"center_x": .5,"center_y":.5}

    BoxLayout:


        orientation: "vertical"
        adaptive_size: True

        Label:
            text: 'Something went wrong'
        GridLayout:
            cols:2
            Label:
                text: 'Amount:'
            Label:
                id: files_count
        GridLayout:
            cols:2
            Label:
                text: 'Name:'
            Label:
                id: line_name
        GridLayout:
            cols:2
            Label:
                text: 'Count:'
            Label:
                id: line_count

        Button:
            text: 'do you want to fix them?'
            on_press: root.dismiss()






<MyLabel@Label>
    pos_hint: {"center_y": .5}

<BackgroundColor@Label>
    background_color: 'FFCCFF'



<MainScreen>
    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: 'Menu'
            height:40
            size_hint_y:None
            md_bg_color: 192/256,110/256,240/256,1
            left_action_items: [["menu", lambda x: x]]


        Label:
#            text: "[color=FF00FF]ГЛАВНОЕ ОКНО[/color]"
            markup: True
            #font_size: "H6"
            pos_hint: {"center_x": .5}
            #adaptive_size: True

        GridLayout:
            cols: 3
            size_hint: 1, 0.3
            padding: 20,10,20,10
            spacing:25

            Button:
                text: 'Запись пациента'
                font_size: 17
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                size_hint:(1,.3)
                on_release: Factory.AddPopup(root.return_controller(), root.return_model()).open()
            Button:
                text: 'Поиск пациента'
                font_size: 17
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                size_hint:(1,.3)
                on_release: Factory.SearchPopup(root.return_controller(), root.return_model()).open()
            Button:
                text: 'Выписка пациента'
                font_size: 17
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                size_hint:(1,.3)
                on_release: Factory.DeletePopup(root.return_controller(), root.return_model()).open()

