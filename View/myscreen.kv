<HandlerPopup@Popup>
    title: 'Информация о владельце'
    auto_dismiss:False
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size_hint:None,None
    size:(350,450)

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            cols:2
            size_hint_y: .5
            Label:
                text: "[color=c06ef0]      Contact[/color]"
                markup: True
                font_size: 20

            Image:
                source:'call.png'
                size: (5,5)
        GridLayout:
            cols:1
            rows:4
            padding:65,10,0,0
            # имя пациента
            MyField
                id: hadler_name_input
                hint_text: 'Имя владельца'
                on_text: root.set_handler_name(self.text)
                pos_hint: {"center_x": .46}

        # Номер телефона
            MyField:
                id: phone_number_input
                hint_text: 'Номера телефона'
                max_text_length: 17
                on_text: root.set_phone_number(self.text)

            #Почта
            MyField:
                id: email_input
                hint_text: 'Почта'
                #max_text_length: 10
                on_text: root.set_mail(self.text)

            #Адрес
            MyField:
                hint_text: 'Адрес'
                id: address_input
                on_text: root.set_address(self.text)
                multiline: False
        GridLayout:
            cols:1
            padding:75,100,0,0
            MDFillRoundFlatButton:
                text: 'Добавить информацию'
                on_press: root.record_handler_info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
            MDFillRoundFlatButton:
                text: 'Добавить информацию'
                on_press: root.dismiss()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1




