                line_color: 0, 0, 0, 1
    #            background_color: 'CCCCFF'
    #            background_normal:''
                pos_hint: {"center_x": .5,"center_y":.5}



            MDFillRoundFlatButton:
                text: 'Вернуться в главное меню'
                #disabled: True if root.everything() else False
                on_press: root.dismiss()
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}


