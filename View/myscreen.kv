<MyField@TextInput>
    size_hint: None, None
    size: "200sp", "40sp"
    #input_filter: "int"
    #pos_hint: {"center_y": .5}


<MyLabel@Label>
    pos_hint: {"center_y": .5}

<BackgroundColor@Label>
    background_color: 'FFCCFF'



<MainScreen>

    BoxLayout:
        orientation: "vertical"
        adaptive_size: True
        #spacing: "12dp"
        #padding: "12dp"
        #radius: [10, ]
        #pos_hint: {"center_x": .5, "center_y": .5}
        #md_bg_color: app.theme_cls.disabled_hint_text_color

        Label:
            text: "[color=FFCCFF]Введите ваши данные[/color]"
            markup: True
            #font_size: "H6"
            pos_hint: {"center_x": .5}
            #adaptive_size: True

        # имя пациента
        MyField
            id: pet_name_input
            multiline: False
            on_text: root.set_pet_name(self.text)

        # дата рождения
        MyField:
            id: birth_date_input

        Button:
            size_hint: None, None
            size: "200sp", "40sp"
            on_press: root.choose_birth_date()

        # дата рождения
        MyField:
            id: last_appointment_date_input

        Button:
            size_hint: None, None
            size: "200sp", "40sp"
            on_press: root.choose_last_appointment_date()


#        MyField:
#            id: disease
#            on_text: root.set_birth(self.text)
#            multiline: False
#
#        MyField:
#            id: disease
#            on_text: root.set_last_appointment_date(self.text)
#            multiline: False

        # имя врача
        MyField:
            id: vet_name_input
            on_text: root.set_vet_name(self.text)
            multiline: False

        # название болезни
        MyField:
            id: disease_input
            on_text: root.set_disease(self.text)
            multiline: False



        Button:
            on_press: root.record_patient_info()
            on_release: root.clear_pet_info_input()
            #on_press: root.info()
        Button:
            text: 'search'
            #on_release: root.search_name_birth('alesya', '2002-22-10')
            #on_press: root.choose_date()
            #on_press: root.delete_vet_name_last_appointment_date('alesya', '2022-03-17')
            on_press: root.info()
