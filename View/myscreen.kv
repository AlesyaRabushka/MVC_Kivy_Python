    size_hint:None,None
    size:(400,500)
#    background_color:'CC99FF'
#    background_normal:''

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



